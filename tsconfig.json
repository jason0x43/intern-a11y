{
  "compilerOptions": {
    "module": "umd",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
